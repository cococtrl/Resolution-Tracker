<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>List of ur resolutions</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
      <nav class="nav">
        <ol>
          <li><a href="/users">All Resolutions</a></li>
          <li>
            <% if (user) { %>
                <a href="/logout">Log Out</a>
            <% } else { %>
                <a href="/auth/google">Login with Google</a>
            <% } %>
          </li>
      </nav>
      <main>
        <div>
          <div id="students">
            <% users.forEach(function(student) { %>
              <div>
                <div>
                  <div>
                    <span>
                      <span><%= user.name %></span>
                    </span>
                  </div>
                  <ul>
                    <% user.resolutions.forEach(function(resolution) { %>
                      <li><%= resolution.text %></li>
                    <% }) %>
                  </ul>
                  <% if (user._id.equals(user && user._id)) { %>
                    <div>
                      <form action="/resolutions" method="POST">
                        <input type="text" name="text">
                        <button type="submit">Add Resolution</button>
                      </form>
                    </div>
                  <% } %>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </main>
</body>
</html>