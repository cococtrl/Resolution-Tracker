<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>List of ur resolutions</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
      <nav class="nav">
        <ol>
          <li><a href="/resolutions">All Resolutions</a></li>
          <li><a href="/resolutions/new">New Resolution</a></li>
          <li>
            <% if (user) { %>
                <a href="/logout">Log Out</a>
            <% } else { %>
                <a href="/auth/google">Login with Google</a>
            <% } %>
          </li>
      </nav>
      <main>
        <div>
          <div id="users">
            <% users.forEach(function(student) { %>
              <div>
                <div>
                  <div>
                      <span><%= user.name %></span>
                  </div>
                  <ul>
                    <% user.resolutions.forEach(function(resolution) { %>
                      <li><%= resolution.text %>
                      <a href="/resolutions/<%=resolution._id%>">Details</a></li>
                    <% }) %>
                  </ul>
                </div>
              </div>
            <% }) %>
          </div>
        </div>
      </main>
</body>
</html>